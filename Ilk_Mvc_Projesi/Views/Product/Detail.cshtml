@model ProductViewModel
    <div class="bg-info">@TempData["Mesaj"]</div>
<h1>@Model.ProductName</h1>
<h3>@($"{Model.UnitPrice:c2}")</h3>


<div class="row">
    <div class="col-3 text-black-50">Kategori Adı</div>
    <div class="col-3">@(Model.CategoryId == null ? "Kategori Yok" : Model.CategoryName)</div>
</div>
<div class="row">
    <div class="col-3 text-black-50">Tedarikçi Firma</div>
    <div class="col-3">@(Model.SupplierId == null ? "Tedarikçi Firması Yok" : Model.CompanyName)</div>
</div>
<div class="row">
    <div class="col-3 text-black-50"></div>
    <div class="col-3">
    <a asp-action="Update" asp-controller="Product" asp-route-id="@Model.ProductId" class="btn btn-warning">Düzenle</a>
    </div>
    <div class="row">
        <input type="button" class="btn btn-danger" value="Sil" data-toggle="modal" data-target="#confirm-delete"/>
    </div>
</div>

<di class="modal-fade" Id="confirm-dalete" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                <hd class="modal-title" in="myModalLabel">Silme Onayı</hd>
            </div>
            <div class="modal-footer">
                <p>Ürün Silinmiştir.Bu işlemin geri dönüşü yoktur.</p>
                <p>Ürün eklediniz.</p>
                <p class=""></p>
            </div>
            <div class="modal-footer"></div>
            <button type="button" class="btn btn-default" data-dismiss="modal">Vazgeç</button>
            <a class="btn btn-danger btn-ok"</a>
        </div>
    </div>
</div>