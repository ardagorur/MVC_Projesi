@model ProductViewModel

<h1>@Model.ProductName</h1>
<h3>@($"{Model.UnitPrice:c2}")</h3>
<a asp-action="Delete" asp-controller="Product" asp-route-categoryId=@Model.ProductId class="btn btn-danger">Ürünü Sil</a>

<div class="row">
    <div class="col-3 text-black-50">Kategori Adı</div>
    <div class="col-3">@(Model.CategoryId == null ? "Kategori Yok" : Model.CategoryName)</div>
</div>
<div class="row">
    <div class="col-3 text-black-50">Tedarikçi Firma</div>
    <div class="col-3">@(Model.SupplierId == null ? "Tedarikçi Firması Yok" : Model.CompanyName)</div>
</div>
<div class="row">
    <div class="col-3 text-black-50"></div>
    <div class="col-3">
    <a asp-action="Update" asp-controller="Product" asp-route-id="@Model.ProductId" class="btn btn-warning">Düzenle</a>
    </div>
</div>