@model Supplier

<h1>@Model.CompanyName</h1>
<h3>@Model.ContactName</h3>
<h3>@Model.Phone</h3>
<p>@Model.SupplierId</p>
<a asp-action="Delete" asp-controller="Supplier" asp-route-id=@Model.SupplierId class="btn btn-danger">Firmayı Sil</a>
<a asp-action="Update" asp-controller="Supplier" asp-route-id=@Model.SupplierId class="btn btn-dark">Firmayı Güncelle</a>

<div class="row">
    <div class="col-9">
        <table class="table-bordered">
            <thead>
                <tr>
                    <th>Ürün Adı</th>
                    <th>Kategori</th>
                    <th>Discontinued</th>
                    <th>Birim Adeti</th>
                    <th>ReorderLevel</th>
                    <th>Tedarikçi</th>
                    <th>Birim Fiyat</th>
                    <th>Stok Adeti</th>
                    <th>Sipariş Adeti</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Products)
                {
                <tr>
                    <td>@item.ProductName</td>
                    <td>@item.Category.CategoryName</td>
                    <td>@item.Discontinued</td>
                    <td>@item.QuantityPerUnit</td>
                    <td>@item.ReorderLevel</td>
                    <td>@item.Supplier.CompanyName</td>
                    <td>@item.UnitPrice</td>
                    <td>@item.UnitsInStock</td>
                    <td>@item.UnitsOnOrder</td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>